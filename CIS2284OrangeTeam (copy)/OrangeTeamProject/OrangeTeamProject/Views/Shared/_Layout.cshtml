<!DOCTYPE html>
@*Will continue designing the Layout. -ARH*@
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @ViewBag.Title
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("OrangeTeam Forum", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                
                <ul class="nav navbar-nav">
                    <li><img src="/images/icon.png" height="40" style="padding-top:10px;" /></li>
                    
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if(User.IsInRole("User"))
                    { 
                        <li>@Html.ActionLink("Forum", "Index", "Forum")</li>
                    }
                    @if(User.IsInRole("Administrator"))
                    { 
                        <li>@Html.ActionLink("Administration", "Index", "Manage")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top:120px"> @*At least the site's material won't be blocked by the nav bar...-ARH*@
        @RenderBody()
        <hr />
        <footer>
            <p>Created by: Team <span style="color:orange">Orange </span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
