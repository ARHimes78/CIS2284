@model IEnumerable<OrangeTeamProject.Models.Thread>

@{
    ViewBag.Title = "Index";
}

<h2>OrangeTeam Forum</h2>
    <h3>@Html.ActionLink("New Thread", "NewThread", "Forum")</h3>
    <table width="100%" border="1">
        <tr>
            <th>Thread Title</th>
            <th>User</th>
            <th>Date Submitted</th>
        </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.Title, "ViewThread", "Forum", new { id = item.ThreadId }, null)</td>
            <td width="100">@item.UserName</td>
            <td width="200">@item.DateAdded</td>
        </tr>
    }
    </table>
    <h3>@Html.ActionLink("Manage Posts", "Index", "Modify")</h3>
